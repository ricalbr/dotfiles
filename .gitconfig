[user]
    name = ricalbr
    email = albr.riccardo@gmail.com

[core]
    editor = nvim
    excludesfile = "~/.gitignore"

[color]
    ui = always
    branch = always
    diff = always
    interactive = always
    status = always
    grep = always
    pager = true
    decorate = always
    showbranch = always

[pager]
    diff = delta
    show = delta
    log = delta
    blame = delta
    grep = delta
    reflog = delta

[interactive]
    diffFilter = delta --color-only

[push]
    default = simple

[merge]
    tool = vimdiff

[mergetool]
    tool = vimdiff
    keepBackup = false
    conflictstyle = diff3

[diff]
    tool = vimdiff

; [url "ssh://git@github.com:ricalbr/"]
;   insteadOf = https://github.com/ricalbr/
;   insteadOf = http://github.com/ricalbr/
[credential]
    helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring

[init]
    defaultBranch = main
[pull]
	rebase = false
